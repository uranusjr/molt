{
    "$schema": "http://json-schema.org/schema#",

    "type": "object",
    "properties": {
        "dependencies": {
            "type": "object",
            "patternProperties": {
                "^(?P<depedency-key>.*)$": {
                    "type": "object",
                    "properties": {
                        "name": {"type": "string"},
                        "version": {"type": "string"},
                        "sources": {
                            "type": "array",
                            "items": {"type": "string"}
                        },
                        "dependencies": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "key": {"type": "string"},
                                    "marker": {"type": "string"}
                                }
                            }
                        }
                    },
                    "required": ["name", "version"]
                }
            }
        },
        "hashes": {
            "type": "object",
            "items": {
                "type": "array",
                "items": {
                    "type": "string",
                    "pattern": "^(?P<hashname>[a-z0-9]+):(?P<value>.+)$"
                }
            }
        },
        "sections": {
            "type": "object",
            "properties": {
                "": {
                    "type": "object",
                    "properties": {
                        "dependencies": {
                            "type": "array",
                            "items": {"type": "string"}
                        },
                        "sections": {
                            "type": "array",
                            "items": {"type": "string"}
                        }
                    }
                }
            },
            "required": [""],
            "patternProperties": {
                "^(?P<section-name>.+)$": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "key": {"type": "string"},
                            "marker": {"type": "string"}
                        },
                        "required": ["key"]
                    }
                }
            }
        },
        "sources": {
            "type": "object",
            "patternProperties": {
                "^(?P<repository-name>.*)$": {
                    "type": "object",
                    "properties": {
                        "url": {"type": "string"},
                        "ignore_ssl": {"type": "boolean"}
                    },
                    "required": ["url"]
                }
            }
        }
    },
    "patternProperties": {"^_(?P<tool>.+)$": {}}
}
