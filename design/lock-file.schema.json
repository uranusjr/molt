{
    "$schema": "http://json-schema.org/schema#",

    "type": "object",
    "properties": {
        "dependencies": {
            "type": "object",
            "patternProperties": {
                "^(?P<dependencyKey>.*)$": {
                    "type": "object",
                    "properties": {
                        "python": {
                            "oneOf": [
                                {
                                    "properties": {
                                        "name": {"type": "string"},
                                        "version": {"type": "string"},
                                        "source": {"type": ["null", "string"]}
                                    },
                                    "required": ["name", "version"]
                                },
                                {
                                    "properties": {
                                        "name": {"type": "string"},
                                        "url": {"type": "string"},
                                        "no_verify_ssl": {"type": "boolean"}
                                    },
                                    "required": ["name", "url"]
                                },
                                {
                                    "properties": {
                                        "name": {"type": "string"},
                                        "path": {"type": "string"}
                                    },
                                    "required": ["name", "path"]
                                },
                                {
                                    "properties": {
                                        "name": {"type": "string"},
                                        "vcs": {"type": "string"},
                                        "ref": {"type": "string"}
                                    },
                                    "required": ["name", "vcs", "ref"]
                                }
                            ]
                        },
                        "dependencies": {
                            "type": "object",
                            "patternProperties": {
                                "^(?P<dependencyKey>.+)": {
                                    "oneOf": [
                                        {"type": "null"},
                                        {
                                            "type": "array",
                                            "items": {"type": "string"}
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "hashes": {
            "type": "object",
            "items": {
                "type": "array",
                "items": {
                    "type": "string",
                    "pattern": "^(?P<hashName>[a-z0-9_]+):(?P<hashValue>.+)$"
                }
            }
        },
        "sources": {
            "type": "object",
            "patternProperties": {
                "^(?P<repositoryName>.*)$": {
                    "type": "object",
                    "properties": {
                        "url": {"type": "string"},
                        "no_verify_ssl": {"type": "boolean"}
                    },
                    "required": ["url"]
                }
            }
        }
    }
}
